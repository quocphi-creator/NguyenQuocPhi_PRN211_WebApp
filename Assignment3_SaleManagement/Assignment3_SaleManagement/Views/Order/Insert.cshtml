@using Assignment3_SaleManagement.Models

@{
    List<Member> members = (List<Member>)ViewBag.Members;
}


<!doctype html>
<html>
<head>
    <title>Insert Order</title>

</head>
<body>
    <h2>wellcome to Insert</h2>
    <form action="~/Order/Add" method="post">
        <input type="text" name="Id" /> Order ID
        <br />
        <input type="datetime-local" name="order" /> Order date
        <br />
        <input type="datetime-local" name="requirement" /> require date
        <br />
        <input type="datetime-local" name="ship" /> Shipped date
        <br />

        <select name="member">
            @{
                foreach (Member m in members)
                {
                    <option value="@m.MemberId">@m.Email</option>
                }
            }
        </select>
        <br />
        <input type="text" name="freight" /> Freight
        <br />
        <input type="submit" value="Submit" />
    </form>
</body>
</html>