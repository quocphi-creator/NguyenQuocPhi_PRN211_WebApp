@using Assignment3_SaleManagement.Models
@model List<Member>

@{
    List<Member> members = (List<Member>)ViewBag.Members;
    
}

<!doctype html>
<html>
<head>

</head>

<body>
    <h1>Hello Member view</h1>
    <select>
        @{
            foreach (Member m in members)
            {
                <option value="@m.MemberId" >
                    @m.Email
                </option>
            }
        }
    </select>


    <table border="1" style="margin-top: 20px">
        <thead>
            <tr>
                <th>Member ID</th>
                <th>Password</th>
                <th>Member Email</th>
                <th>Member Company</th>
                <th>Member City</th>
                <th>Member Country</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Member m in Model)
                {
                    <tr>
                        <td>@m.MemberId</td>
                        <td>@m.Password</td>
                        <td>@m.Email</td>
                        <td>@m.CompanyName</td>
                        <td>@m.City</td>
                        <td>@m.Country</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>